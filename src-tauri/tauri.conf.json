{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mado",
  "version": "0.1.0",
  "identifier": "ink.doa.mado",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm frontend:dev",
    "beforeBuildCommand": "pnpm frontend:generate"
  },
  "app": {
    "windows": [
      {
        "title": "Mado",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
